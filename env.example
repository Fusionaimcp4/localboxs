# LocalBoxs Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - Core Application Settings
# =============================================================================

# Database Connection
DATABASE_URL="postgresql://username:password@localhost:5432/localboxs"

# Authentication (REQUIRED)
NEXTAUTH_SECRET="your-super-secret-random-string-32-chars-minimum"
NEXTAUTH_URL="https://your-domain.com"

# OpenAI API (REQUIRED)
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"

# =============================================================================
# OPTIONAL - External Services
# =============================================================================

# Chatwoot Integration (Optional)
CHATWOOT_BASE_URL="https://your-chatwoot-instance.com"
CHATWOOT_ACCOUNT_ID="your-account-id"
CHATWOOT_API_KEY="your-chatwoot-api-key"

# n8n Workflow Automation (Optional)
N8N_BASE_URL="https://your-n8n-instance.com"
N8N_API_KEY="your-n8n-api-key"

# Fusion API for AI Orchestration (Optional)
FUSION_BASE_URL="https://api.mcp4.ai"
FUSION_API_KEY="your-fusion-api-key"

# =============================================================================
# OPTIONAL - Email Configuration
# =============================================================================

# SMTP Settings for Email Notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =============================================================================
# OPTIONAL - Application URLs
# =============================================================================

# Public URLs (used for demo generation and links)
NEXT_PUBLIC_BASE_URL="https://your-domain.com"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Demo Domain (for local development)
DEMO_DOMAIN="localhost:3000"

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Never commit this file to version control
# 2. Use strong, unique secrets for NEXTAUTH_SECRET
# 3. Rotate API keys regularly
# 4. Use environment-specific values for production
# 5. Consider using a secrets management service for production
