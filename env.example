# Database Configuration
DATABASE_URL="postgresql://postgres:your_password@localhost:5433/localboxs"
POSTGRES_PASSWORD="your-secure-postgres-password"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="https://localboxs.com"

# App URLs
NEXT_PUBLIC_APP_URL="https://localboxs.com"
NEXT_PUBLIC_BASE_URL="https://localboxs.com"

# Chatwoot Configuration
NEXT_PUBLIC_CHATWOOT_BASE_URL="https://chatwoot.localboxs.com"
CHATWOOT_BASE_URL="https://chatwoot.localboxs.com"
CHATWOOT_ACCOUNT_ID="your-chatwoot-account-id"
CHATWOOT_API_KEY="your-chatwoot-api-key"

# n8n Configuration
N8N_BASE_URL="https://n8n.localboxs.com"
N8N_API_KEY="your-n8n-api-key"
N8N_DUPLICATE_ENDPOINT="/api/v1/workflows/duplicate"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"

# Fusion Configuration
FUSION_BASE_URL="https://fusion.localboxs.com"
FUSION_API_KEY="your-fusion-api-key"

# Email Configuration (Required for Docker)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@localboxs.com"

# Security (Required for Docker)
ENCRYPTION_KEY="your-32-character-encryption-key"
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your-turnstile-site-key"
TURNSTILE_SECRET_KEY="your-turnstile-secret-key"

# Redis (Optional)
REDIS_URL="redis://localhost:6379"

# Demo Domain
DEMO_DOMAIN="demo.localboxs.com"

# Additional Configuration (from your .env)
INTEGRATION_ENCRYPTION_KEY="your-integration-encryption-key"
NEXT_TELEMETRY_DISABLED="1"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
OAUTH_GOOGLE_ENABLED="true"

# Microsoft OAuth (Optional)
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
OAUTH_MICROSOFT_ENABLED="false"

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
OAUTH_GITHUB_ENABLED="false"

# Legacy Email Configuration (Alternative to EMAIL_SERVER_*)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_SECURE="false"

# Captcha Configuration
TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""
CAPTCHA_ENABLED=""

# Password Policy
PWNED_PASSWORDS_ENABLED="true"

# Admin Access
PAGE_AUTH_USER="admin"
PAGE_AUTH_PASS="your-admin-password"

# File Paths
prompt_Generate_Knowledge_Base="n8n_prompt_Generate_Knowledge_Base.md"
DEMO_ROOT="./public/demos"
SKELETON_PATH="data/templates/n8n_System_Message.md"